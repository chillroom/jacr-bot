{
  "name": "betabot",
  "version": "1.11.5",
  "description": "Just a chillroom dubtrack bot",
  "engines": {
    "node": ">= 4.2.3",
    "npm": ">= 3.5.0"
  },
  "main": "app.js",
  "private": true,
  "dependencies": {
    "dubapi": "^1.2.0",
    "hapi": "^12.1.0",
    "hapi-mongodb": "^5.0.0",
    "htmlparser": "^1.7.7",
    "jethro": "^2.6.6",
    "kerberos": "0.0.17",
    "mongoose": "^4.2.9",
    "request": "^2.64.0",
    "soupselect": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^1.10.3",
    "gulp": "^3.9.0",
    "gulp-rename": "^1.2.2",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "mocha-tap-reporter": "^0.1.3",
    "should": "^7.1.1",
    "supertest": "^1.1.0"
  },
  "scripts": {
    "preversion": "gulp config && npm run lint",
    "version": "git add --all",
    "postversion": "git push",
    "test": "npm install && gulp mine && node ./app/bot/index.js",
    "start": "npm install && node app.js",
    "server": "npm install && gulp mine && node ./app/server/index.js",
    "lint": "node_modules/.bin/eslint app --fix",
    "testy": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha -- -R mocha-tap-reporter > test.tap",
    "ci-test": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha -- -R mocha-tap-reporter > test.tap && node_modules/.bin/istanbul report cobertura",
    "ci-lint": "node_modules/.bin/eslint -f checkstyle app > checkstyle-result.xml"
  }
}
